<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="false"
    android:layout_alignParentEnd="true"
    android:orientation="vertical">

    <Button
        android:id="@+id/retour_button"
        style="?attr/buttonStyle"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:text="Retour au menu" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="17dp"
        android:layout_weight="0.46"
        android:text="Choisissez votre ligne :" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:baselineAligned="false"
        android:text="Liste des trams" />

    <TableLayout
        android:id="@+id/trameLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TableRow
            android:id="@+id/Rowtram1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"/>

        <TableRow
            android:id="@+id/Rowtram2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />

        <TableRow
            android:id="@+id/Rowtram3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />

        <TableRow
            android:id="@+id/Rowtram4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />

        <TableRow
            android:id="@+id/Rowtram5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </TableRow>
    </TableLayout>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listeLignesTram"
        android:text="Liste des bus Chronos" />

    <TableLayout
        android:id="@+id/chronoLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="5">

    </TableLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/listeLignesProximo"
        android:text="Liste des bus Proximos" />

    <TableLayout
        android:id="@+id/proximoLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="5">

    </TableLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/listeLignesFlexo"
        android:text="Liste des bus Flexos" />

    <LinearLayout
        android:id="@+id/flexoLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"></LinearLayout>


</LinearLayout>